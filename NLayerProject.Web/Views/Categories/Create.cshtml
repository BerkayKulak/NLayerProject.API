@model CategoryDto

@{
    ViewData["Title"] = "Create";
}

<h1>Kategori Ekleme</h1>
<div class="row">

    <div class="col-md-4">

        <form asp-action ="Create">

            <div asp-validation-summary="ModelOnly" class="text-danger">

                <div class="form-group">

                    <label asp-for="Name">Kategori ismi: </label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name"></span>

                </div>

                <div class="form-group">
                    @* submit butonuna tıkladığım zaman Name alanı sayesinde CCategoryDto
                 sınıfı dolucak categoriescontrollerdeki  CategoryDto categoryDto yere gelicek
                        ekleme işlei başarılı olursa Index sayfasına yönlendirilicem*@
                    <input type="submit" value="Ekle" class="btn btn-primary" />
                </div>
            </div>




        </form>


    </div>

</div>

